@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@model CommonModels.Cabin

@{
    ViewData["Title"] = "Majoituspaikan tiedot";
}

<h1>Majoituspaikan tiedot</h1>

<div>
    <br />
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center">
                @if (Model.CabinImages.Count() == 0)
                {
                    <img src="~/images/cabin-has-no-images.png" style="height:20em;" />
                }
                else
                {
                    <div id="carouselCabinImages" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">

                            @for (int i = 0; i < Model.CabinImages.Count(); i++)
                            {
                                var source = Configuration["BlobStorageConfig:BaseUrl"] + Model.CabinImages[i].ImageUrl;

                                if (i == 0)
                                {
                                    <div class="carousel-item active">
                                        <img src="@source" style="height:20em; max-width:400px" />
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img src="@source" style="height:20em; max-width:400px  " />
                                    </div>
                                }
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselCabinImages" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselCabinImages" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CabinName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinName)
        </dd>
        <dt class="col-sm-2">
            Toimipiste
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resort.ResortName)
        </dd>
        <dt class="col-sm-2">
            Omistaja
        </dt>
        <dd class="col-sm-10">
            @Model.Person.FirstName  @Model.Person.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CabinPricePerDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CabinPricePerDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rooms)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CabinId" class="btn btn-success">Muokkaa</a>

    @*<button onclick="window.history.go(-1);" class="btn btn-secondary">Takaisin</button>*@
    <a asp-action="Index" class="btn btn-secondary">Takaisin</a>
</div>

<div style="padding:200px;"></div>
